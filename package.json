{
  "name": "officejournal",
  "appname": "Office Journal",
  "version": "0.6.4",
  "description": "A cross-platform office journal application",
  "private": true,
  "main": "public/electron.js",
  "license": "GPL-3.0 License",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "electron-is-dev": "^1.2.0",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.5",
    "eslint-webpack-plugin": "^2.1.0",
    "feather-icons": "^4.28.0",
    "html-react-parser": "^0.14.0",
    "i18next": "^19.8.3",
    "lodash": "^4.17.20",
    "lowdb": "^1.0.0",
    "markdown-it": "^12.0.2",
    "mathjs": "^8.0.1",
    "moment": "^2.29.1",
    "node-latex": "^3.0.0",
    "node-sass": "^4.14.1",
    "noty": "^3.2.0-beta",
    "prop-types": "^15.7.2",
    "rc-input-number": "^6.1.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-i18next": "^11.7.3",
    "react-images-upload": "^1.2.8",
    "react-markdown-editor-lite": "^1.2.2",
    "react-mousetrap": "^0.2.0",
    "react-redux": "^7.2.2",
    "react-scripts": "^3.4.4",
    "react-star-rating-controlled-component": "^1.0.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "shortid": "^2.2.16"
  },
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "release": "rescripts build && electron-builder -wml --publish always",
    "electron-pack": "electron-builder -c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.14",
    "@rescripts/rescript-env": "^0.0.12",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "typescript": "^4.0.5",
    "wait-on": "^5.2.0"
  },
  "keywords": [
    "recipe",
    "recipes",
    "recipe-manager",
    "macos",
    "windows",
    "linux",
    "react"
  ],

  "author": {
    "name": "Bhanu-Anmol",
    "email": "prakash.2@iitj.ac.in"
  },
  "links": {

  },
  "build": {
    "appId": "com.officejournal.app",
    "productName": "Office journal",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*"
    ],
    "extraResources": [
      "./extraResources/**"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "category": "Utility",
      "description": "office journal",
      "packageCategory": "Utility",
      "target": [
        "AppImage"
      ]
    }
  }
}
